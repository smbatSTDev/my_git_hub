.container.text-center.mx-auto
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    - if flash[:errors]
      - flash[:errors].each do |msg|
        .alert.alert-danger=msg
    .card{style: "width: 40rem;margin:auto"}
      .card-header
        Profile Information
      %ul.list-group.list-group-flush
        %li.list-group-item
          Email
          = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'
        %li.list-group-item
          Gender
          = f.select(:gender, ['Male', 'Female'], {}, { :class => 'form-control' })
        %li.list-group-item
          Birth Date
          = f.date_field(:birth_date, options = {:class => 'form-control'})
        %li.list-group-item
          Github access token
          = f.text_field(:git_access_token, options = {:class => 'form-control'})
        %li.list-group-item
          Password
          = f.password_field :password, autocomplete: "new-password", class: 'form-control'
        %li.list-group-item
          Password Confirmation
          = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'
        %li.list-group-item
          Current Password
          = f.password_field :current_password, autocomplete: "current-password", class: 'form-control'
          = f.submit "Update", class: 'btn btn-primary mt-2'



